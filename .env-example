# Required - API authentication key
WHISPERX_API_KEY=your-secret-api-key

# Optional - Server configuration
WHISPERX_HOST=0.0.0.0
WHISPERX_PORT=8880

# Optional - WhisperX model settings
WHISPERX_MODEL=large-v3-turbo
WHISPERX_COMPUTE_TYPE=float16
WHISPERX_BATCH_SIZE=16

# Optional - GPU device index (default: 0)
# Use for multi-GPU systems to select which GPU to use
WHISPERX_DEVICE=0

# Optional - Default language (default: auto-detect)
# Set to skip language detection and speed up inference
# Examples: en, pt, es, fr, de, ja, zh
# WHISPERX_LANGUAGE=en

# Optional - Preload alignment models at startup
# Comma-separated list of language codes
# WHISPERX_PRELOAD_LANGUAGES=en,es,pt

# Required for speaker diarization (speaker_labels=true)
# The pyannote diarization model is gated on HuggingFace:
# 1. Accept license at https://hf.co/pyannote/speaker-diarization-community-1
# 2. Get token at https://hf.co/settings/tokens
WHISPERX_HF_TOKEN=hf_xxx

# Optional - Data storage location
WHISPERX_DATA_DIR=./data

# Optional - Maximum file upload size in MB (default: 2048 = 2GB)
WHISPERX_MAX_UPLOAD_SIZE_MB=2048

# Optional - Transcription defaults
WHISPERX_DEFAULT_TASK=transcribe
WHISPERX_DEFAULT_TEMPERATURE=0.0
WHISPERX_DEFAULT_BEAM_SIZE=5

# Optional - VAD defaults
WHISPERX_DEFAULT_VAD_ONSET=0.5
WHISPERX_DEFAULT_VAD_OFFSET=0.363
WHISPERX_DEFAULT_CHUNK_SIZE=30
